<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_brand"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ui.brand.BrandFragment">

    <LinearLayout
        android:id="@+id/brand_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/brand_list"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/brand_subheader_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/home_data_subheader"
            android:textSize="16sp" />

    </LinearLayout>

    <ListView
        android:id="@+id/brand_lv"
        android:layout_width="match_parent"
        android:layout_height="570dp"
        android:layout_below="@id/brand_ll" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/viewBrand_fab_createBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/design_default_color_primary"
        android:elevation="6dp"
        android:src="@drawable/ic_add"
        app:tint="@null" />


</RelativeLayout>